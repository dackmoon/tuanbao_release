/* pages/record/edit/edit.wxss */
.edit-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 20rpx;
  box-sizing: border-box;
}

.edit-header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.edit-body {
  flex: 1;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.edit-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 0;
  margin-bottom: 30rpx;
}

.media-preview {
  margin-bottom: 30rpx;
}

.image-preview-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-preview-item {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-image, .delete-video {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.video-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.preview-video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.media-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.media-btn {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.media-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.media-text {
  font-size: 28rpx;
  color: #666666;
}

.edit-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.cancel-btn, .save-btn {
  width: 48%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.save-btn {
  background-color: #07c160;
  color: #ffffff;
}

.save-btn[disabled] {
  background-color: #9be6b4;
  color: #ffffff;
} 