/* pages/record/detail/detail.wxss */
.detail-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}

/* 动态卡片样式 */
.moment-card {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 动态头部样式 */
.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.time {
  font-size: 24rpx;
  color: #999999;
}

.moment-actions {
  padding: 10rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 动态内容样式 */
.moment-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

/* 图片样式 */
.image-container {
  margin-top: 20rpx;
}

.image-grid-1 {
  display: flex;
}

.image-grid-1 .moment-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 8rpx;
}

.image-grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10rpx;
}

.image-grid-2 .moment-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

.image-grid-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.image-grid-3 .moment-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

/* 视频样式 */
.video-container {
  margin-top: 20rpx;
}

.moment-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

/* 点赞和评论区域样式 */
.moment-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.moment-stats {
  display: flex;
  margin-bottom: 16rpx;
}

.like-btn, .comment-btn {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  padding: 6rpx 0;
}

.like-icon, .comment-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.like-count, .comment-count {
  font-size: 24rpx;
  color: #666666;
}

.liked {
  color: #07c160;
}

.liked .like-count {
  color: #07c160;
}

/* 点赞列表样式 */
.likes-list {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

.like-list-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.like-list-text {
  font-size: 24rpx;
  color: #666666;
}

/* 评论列表样式 */
.comments-container {
  background-color: #ffffff;
  flex: 1;
}

.comments-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.comments-list {
  padding: 0 30rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
  position: relative;
}

.comment-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-nickname {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 16rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999999;
}

.comment-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  word-break: break-all;
}

.delete-comment {
  position: absolute;
  right: 0;
  top: 0;
  padding: 10rpx;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 空评论状态 */
.empty-comments {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-comments-text {
  font-size: 26rpx;
  color: #999999;
}

/* 评论输入框样式 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  color: #07c160;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
} 