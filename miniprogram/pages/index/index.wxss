.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  padding: 0 24rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.send-btn {
  width: 110rpx;
  height: 72rpx;
  background-color: #1296db;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.send-btn.disabled {
  background-color: #cccccc;
}
