.chat-container-flat {
  width: 100%;
  margin: 20rpx 0;
  background-color: #ffffff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.chat-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.messages-area {
  padding: 20rpx;
  height: 500rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
  width: 100%;
  align-items: flex-start;
}

.user-message {
  flex-direction: row-reverse;
}

.bot-message {
  flex-direction: row;
}

.chat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 16rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
  border: 2rpx solid #eaeaea;
}

.message-content {
  max-width: calc(70% - 80rpx);
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.user-message .message-content {
  background-color: #1296db;
  color: #ffffff;
  border-radius: 8rpx;
}

.bot-message .message-content {
  background-color: #f5f5f5;
  color: #333333;
  border-radius: 8rpx;
}

/* 扁平风格中的错误消息样式 */
.bot-message .message-content.error {
  background-color: #fff0f0;
  color: #ff6666;
  border-left: 4rpx solid #ff6666;
}

.loading-container {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.loading-dots {
  background-color: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  min-width: 80rpx;
  max-width: calc(70% - 80rpx);
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #999999;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

.input-area {
  padding: 20rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-top: 2rpx solid #f5f5f5;
