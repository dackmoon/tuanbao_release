page {
  background-color: #d6f3ff; /* 浅蓝色背景 */
  min-height: 100vh;
  padding: 0; /* 移除所有内边距 */
  box-sizing: border-box;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%; /* 宽度铺满屏幕 */
  height: 350rpx;
  position: relative;
  overflow: hidden;
  border-radius: 0; /* 移除圆角 */
  box-shadow: none; /* 移除阴影 */
  margin: 0; /* 移除所有外边距 */
}

.swiper {
  width: 100%;
  height: 100%;
  border-radius: 0;
  overflow: hidden;
}

.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* 覆盖 Vant 默认样式 */
.van-swipe {
  border-radius: 0;
  overflow: hidden;
}

.van-swipe-item {
  overflow: hidden;
  position: relative;
}

.swiper-image {
  width: 100%;
  height: 120%; /* 增加图片高度，使其有足够空间进行位置调整 */
  position: absolute;
  left: 0;
}

/* 调整每张图片的位置 */
.image-position-1 .swiper-image {
  top: 0rpx;
}

.image-position-2 .swiper-image {
  top: -70rpx;
}

.image-position-3 .swiper-image {
  top: 0rpx;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  color: #ffffff;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* 导航栏样式 */
.nav-container {
  width: 100%; /* 宽度铺满屏幕 */
  margin: 0; /* 移除所有外边距 */
  background-color: #ffffff;
  border-radius: 0; /* 移除圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 30rpx 0; /* 增加上下内边距，减少左右内边距 */
  border-bottom: 1rpx solid #f0f0f0; /* 添加底部边框作为分隔线 */
}

.nav-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 20rpx; /* 添加左右内边距 */
}

.nav-row:last-child {
  margin-bottom: 0;
}

.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
}

.nav-icon-wrapper {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e6f7ff, #d6f3ff);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  width: 50rpx;
  height: 50rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333333;
  margin-top: 6rpx;
}

/* 近期行程提醒样式 */
.upcoming-schedule-container {
  width: 100%; /* 宽度铺满屏幕 */
  margin: 0; /* 移除所有外边距 */
  background-color: #ffffff;
  border-radius: 0; /* 移除圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 20rpx 0; /* 移除左右内边距 */
  overflow: hidden;
  height: 400rpx; /* 固定容器高度 */
  display: flex;
  flex-direction: column;
}

.upcoming-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx 20rpx; /* 增加左右内边距 */
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0; /* 防止头部被压缩 */
}

.upcoming-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.view-more {
  font-size: 26rpx;
  color: #1296db;
}

.upcoming-list {
  padding: 10rpx 0;
  flex: 1; /* 列表占据剩余空间 */
  overflow-y: auto; /* 添加垂直滚动 */
}

.upcoming-item {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx; /* 增加左右内边距 */
  border-bottom: 1rpx solid #f5f5f5;
  height: 80rpx; /* 减小每个项目的高度 */
}

.upcoming-item:last-child {
  border-bottom: none;
}

.upcoming-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx; /* 减小日期区域宽度 */
  height: 80rpx; /* 减小日期区域高度 */
  background-color: #f0f8ff;
  border-radius: 10rpx;
  margin-right: 16rpx;
  flex-shrink: 0; /* 防止日期区域被压缩 */
}

.date-day {
  font-size: 30rpx; /* 减小日期字体 */
  font-weight: bold;
  color: #1296db;
  line-height: 1;
}

.date-month {
  font-size: 20rpx; /* 减小月份字体 */
  color: #666666;
  line-height: 1;
  margin-top: 4rpx;
}

.upcoming-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.upcoming-content .upcoming-title {
  font-size: 28rpx; /* 减小标题字体 */
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upcoming-time {
  font-size: 22rpx; /* 减小时间字体 */
  color: #999999;
}

.upcoming-status {
  font-size: 20rpx; /* 减小状态字体 */
  color: #999999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  flex-shrink: 0; /* 防止状态区域被压缩 */
  margin-left: 12rpx;
}

.upcoming-status.today {
  color: #ffffff;
  background-color: #ff6b6b;
}

/* AI对话助手样式 */
.ai-assistant-container {
  width: 100%;
  margin: 30rpx 0 0 0;
  background-color: #ffffff;
  border-radius: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 20rpx 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.ai-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.chat-container {
  padding: 20rpx 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.chat-welcome {
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.welcome-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 20rpx 0;
}

.welcome-message {
  background-color: #f5f5f5;
  color: #333333;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  max-width: calc(70% - 80rpx);
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.message-user {
  align-items: flex-end;
}

.message-bot {
  align-items: flex-start;
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.message-user .message-header {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 10rpx;
}

.message-nickname {
  font-size: 24rpx;
  color: #666666;
}

.message-content {
  max-width: 70%;
  padding: 16rpx 24rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  word-break: break-all;
  line-height: 1.4;
}

.message-user .message-content {
  background-color: #d6f3ff;
  color: #333333;
  border-top-right-radius: 4rpx;
}

.message-bot .message-content {
  background-color: #f5f5f5;
  color: #333333;
  border-top-left-radius: 4rpx;
}

/* 错误消息样式 */
.bot-message .message-content.error {
  background-color: #fff0f0;
  color: #ff6666;
  border-left: 4rpx solid #ff6666;
  padding-left: 20rpx;
}

.loading-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1296db;
  margin: 0 6rpx;
  animation: loading 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.input-container {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  background-color: #f9f9f9;
}

.input-box {
  flex: 1;
  background-color: #ffffff;
  border-radius: 36rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  border: 1rpx solid #eaeaea;
}

.send-button {
  width: 100rpx;
  height: 70rpx;
  background-color: #1296db;
  color: #ffffff;
  border-radius: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.send-button.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

