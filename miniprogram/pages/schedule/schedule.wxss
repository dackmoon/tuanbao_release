}

.schedule-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.schedule-close:active {
  background-color: rgba(255, 255, 255, 0.2);
  transform: scale(0.9);
}

/* 表单内容区域 */
.schedule-form {
  flex: 1;
  padding: 0 20rpx;
  max-height: 60vh;
}

.form-section {
  margin: 40rpx 0;
}

.form-section:first-child {
  margin-top: 32rpx;
}

.form-section:last-child {
  margin-bottom: 32rpx;
}

/* 表单内容统一边距 */
.form-content {
  margin: 0 20rpx;
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.required-mark {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-left: 8rpx;
}

/* 输入框样式 */
.form-input {
  height: 88rpx;
  width: 500rpx;
  margin: 0 20rpx 0 20rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #fafafa;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 新的时间选择器组（同一行） */
.time-selector-group {
  display: flex;
  gap: 12rpx;
  margin: 0 50rpx 0 20rpx;
}

.inline-time-picker {
  width: 120rpx;
}

.date-picker {
  width: 180rpx; /* 日期选择器稍微宽一些 */
}

.inline-picker-display {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 4rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #333333;
  text-align: center;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.inline-picker-display:active {
  background-color: #e9ecef;
  border-color: #667eea;
}

/* 重复选项 */
.repeat-options {
  display: flex;
  gap: 12rpx;
  margin: 0 50rpx 0 20rpx;
}

.repeat-option {
  width: 120rpx;
  padding: 24rpx 8rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.repeat-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: #ffffff;
}

.repeat-option:not(.active):active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.option-text {
  font-size: 24rpx;
  font-weight: 500;
  display: block;
}

.option-desc {
  font-size: 18rpx;
  opacity: 0.8;
  margin-top: 4rpx;
  display: block;
}

/* 描述输入框 */
.form-textarea {
  min-height: 120rpx;
  width: 500rpx;
  margin: 0 20rpx 0 20rpx;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #fafafa;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #667eea;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 底部按钮区域 */
.schedule-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx 40rpx;
  background-color: #f8f9fa;
  border-top: 2rpx solid #e9ecef;
}

.schedule-footer .btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
}

.schedule-footer .cancel-btn {
  background-color: #6c757d;
  color: #ffffff;
}

.schedule-footer .cancel-btn:active {
  background-color: #5a6268;
  transform: scale(0.98);
}

.schedule-footer .save-btn {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.schedule-footer .save-btn:active {
  background: linear-gradient(135deg, #218838 0%, #1c7a6b 100%);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4);
}

.task-mgmt-close {
  font-size: 40rpx;
  color: #d4a000;
  padding: 10rpx;
  cursor: pointer;
}

.task-mgmt-content {
  height: 60vh; /* scroll-view需要固定高度 */
  padding: 20rpx;
  box-sizing: border-box;
}

/* 任务列表样式 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #ffeb3b;
  transition: all 0.2s ease;
}

.task-item:hover {
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.task-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff4b8, #ffeb3b);
  color: #d4a000;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1;
  overflow: hidden;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.3;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.task-operation-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.operation-type {
  font-size: 24rpx;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.single-type {
  background-color: #1296db;
}

.batch-type {
  background-color: #ff9500;
}

.schedule-count {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.task-date-range {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.task-create-time {
  font-size: 24rpx;
  color: #999;
}

.task-delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #fff5f5;
  transition: all 0.2s ease;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.task-delete-btn:active {
  background-color: #ffe6e6;
  transform: scale(0.9);
}

.delete-icon {
  font-size: 32rpx;
}

/* 任务管理空状态样式 */
.task-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.task-empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.task-empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.task-empty-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
  max-width: 400rpx;
}