/* pages/more/more.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: #f9f9f9;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 50rpx 40rpx;
  background-color: #ffffff;
  margin-bottom: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  position: relative;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
}

.user-info-section::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(to right, #07c160, #09bb07, #07c160);
}

.user-info-section:active {
  background-color: #f5f5f5;
}

/* 添加右箭头指示可点击 */
.user-info-section::before {
  content: '';
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: translateY(-50%) rotate(45deg);
}

/* 头像样式 */
.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(7, 193, 96, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-details {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nickname {
  font-size: 38rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #888888;
  line-height: 1.4;
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
  gap: 1rpx;
  margin-bottom: 0;
  padding: 0;
  width: 100%;
  background-color: #f0f0f0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  border-radius: 0;
  box-shadow: none;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.menu-item-hover {
  transform: scale(0.98);
  background-color: #fafafa;
}

/* 菜单图标文本 */
.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

/* 箭头文本 */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 退出账号按钮样式 */
.logout-item {
  margin: 0;
  background-color: #fff5f5;
  border-top: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.logout-item-hover {
  background-color: #fff0f0;
  transform: scale(0.98);
}

.logout-text {
  color: #ff4d4f;
  font-weight: 500;
}

.logout-icon-text {
  background-color: #ffeeee;
  color: #ff4d4f;
}

/* 版本信息 */
.version-info {
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
  padding-bottom: 40rpx;
}

.version-text {
  font-size: 24rpx;
  color: #aaaaaa;
  letter-spacing: 1rpx;
}

/* 个人资料修改弹窗 */
.profile-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.profile-content {
  position: relative;
  width: 90%;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 1001;
}

.profile-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.profile-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.close-btn {
  font-size: 40rpx;
  color: #999999;
  padding: 10rpx;
}

.profile-body {
  padding: 30rpx;
}

/* 头像选择样式 */
.avatar-section {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.avatar-wrapper {
  background-color: transparent;
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.modal-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 2rpx solid #f0f0f0;
}

.avatar-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 6rpx 0;
}

/* 昵称输入样式 */
.nickname-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

.profile-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .save-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.save-btn {
  background-color: #07c160;
  color: #ffffff;
}

.save-btn[disabled] {
  background-color: #9be6b4;
  color: #ffffff;
}
