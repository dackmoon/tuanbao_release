/* pages/memo/edit/edit.wxss */
page {
  background-color: #f2f2f7;
  height: 100vh;
}

.edit-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

/* 标题与标签行 */
.header-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 标题输入容器 */
.title-input-container {
  position: relative;
  margin-bottom: 30rpx;
}

.title-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  background-color: #f8f8f8;
  border-radius: 15rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.title-input:focus {
  background-color: #ffffff;
  border-color: #007AFF;
}

.title-input::placeholder {
  color: #999999;
  font-weight: 400;
}

/* 标签区域 */
.tag-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.tag-text-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  min-width: 60rpx;
}

/* 标签选择器 */
.tag-selector {
  display: flex;
  align-items: center;
  position: relative;
  flex: 1;
  cursor: pointer;
}

.tag-selector:active .selected-tag {
  transform: scale(0.95);
}

.selected-tag {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

/* 未选择标签时的占位样式 */
.tag-placeholder {
  background-color: #f0f0f0 !important;
  border: 2rpx dashed #cccccc !important;
  box-shadow: none !important;
}

.tag-label {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.selector-arrow {
  font-size: 20rpx;
  color: #666666;
  margin-left: 10rpx;
  transition: transform 0.2s ease;
}

/* 必填标记 */
.required-indicator {
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #FF3B30;
  font-size: 32rpx;
  font-weight: bold;
}

/* 内容输入区域 */
.content-section {
  flex: 1;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.content-textarea {
  width: 100%;
  min-height: 400rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  box-sizing: border-box;
}

.content-textarea::placeholder {
  color: #999999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 30rpx;
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.cancel-btn {
  background-color: #8E8E93;
  color: #ffffff;
}

.cancel-btn:active {
  background-color: #6D6D70;
  transform: scale(0.98);
}

.save-btn {
  background-color: #007AFF;
  color: #ffffff;
}

.save-btn:active {
  background-color: #0056CC;
  transform: scale(0.98);
}

.save-btn.disabled {
  background-color: #CCCCCC;
  opacity: 0.6;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 500;
}

/* 标签选择器弹窗 */
.tag-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.2s ease;
}

.tag-picker-container {
  background-color: #ffffff;
  border-radius: 25rpx;
  width: 600rpx;
  max-height: 80vh;
  animation: slideUp 0.3s ease;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}

.picker-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #666666;
  border-radius: 50%;
  background-color: #f8f8f8;
}

.picker-close:active {
  background-color: #e8e8e8;
}

/* 标签选项列表 */
.tag-options {
  padding: 20rpx 0;
  max-height: 500rpx;
  overflow-y: auto;
}

.tag-option {
  display: flex;
  align-items: center;
  padding: 25rpx 40rpx;
  transition: background-color 0.2s ease;
  position: relative;
}

.tag-option:active {
  background-color: #f8f8f8;
}

.tag-option.selected {
  background-color: #E3F2FD;
}

.tag-color-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}

.tag-option-label {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.selected-icon {
  color: #007AFF;
  font-size: 28rpx;
  font-weight: bold;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}