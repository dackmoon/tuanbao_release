/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 90rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  animation: pulse 3s infinite ease-in-out;
  transition: all 0.3s ease;
}

.logo.enlarged {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  animation: none;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.login-card {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.privacy-notice {
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.privacy-link {
  color: #07c160;
  display: inline;
}

.wechat-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 96rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 34rpx;
  border-radius: 48rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
  border: none;
  white-space: nowrap;
  padding: 0 30rpx;
  line-height: 96rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.login-btn-text {
  white-space: nowrap;
  display: inline-block;
}

.login-alternative {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #999;
  text-decoration: underline;
} 